<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.book.dao.ParameterMapper">
    <select id="getParameters" resultType="Parameter">
        SELECT * FROM tb_parameter WHERE id=1
    </select>

    <update id="parameterModify" >
        UPDATE tb_parameter SET cost=#{cost},validity=#{validity} WHERE id=1
    </update>

</mapper>